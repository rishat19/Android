<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="icon">@color/icons</item>
        <item name="divider">@color/divider</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="Button1">
        <item name="android:background">@drawable/button1</item>
    </style>

    <style name="TextView1">
        <item name="android:background">@drawable/text_view1</item>
    </style>

    <style name="TextView2">
        <item name="android:background">@drawable/text_view2</item>
    </style>

</resources>
